<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="1"
    android:columnCount="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:weightSum="1"
        android:measureWithLargestChild="false"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:background="#ffff">

        <ImageView
            android:layout_width="468dp"
            android:layout_height="234dp"
            android:id="@+id/discountImage"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/special_discount" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="You got 20% Discount in your purchase!"
            android:id="@+id/winningDiscountText"
            android:textColor="#4C4A4C"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Alpia Alpenmilch"
            android:id="@+id/winningPoints"
            android:textColor="#4C4A4C"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="494dp"
            android:layout_height="112dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/alpia"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Show this code at Checkout"
                android:id="@+id/winningDiscountExplain"
                android:textColor="#4C4A4C"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>

        <ImageView
            android:layout_width="89dp"
            android:layout_height="87dp"
            android:id="@+id/winningQRCode"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/qrcode"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="backToHome" />

    </LinearLayout>

</GridLayout>