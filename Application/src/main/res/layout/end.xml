<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="1"
    android:columnCount="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:weightSum="1"
        android:measureWithLargestChild="false"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:background="#ffff">

        <ImageView
            android:layout_width="468dp"
            android:layout_height="234dp"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/youwin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="You earned 100 points!"
            android:id="@+id/textView2"
            android:textColor="#4C4A4C"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="You got 5% Discount in your purchase!"
            android:id="@+id/textView7"
            android:layout_marginTop="25dp"
            android:textColor="#4C4A4C"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Show this code at Checkout"
            android:id="@+id/textView8"
            android:textColor="#4C4A4C"
            android:layout_gravity="center_horizontal" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"></FrameLayout>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/qrcode"
            android:layout_marginTop="5dp" />

        Button
            android:layout_width="390dp"
            android:layout_height="70dp"
            android:text="BBQ Challenge"
            android:id="@+id/button3"
            android:background="#ff9230"
            android:textColor="#ffff"
            android:layout_marginTop="5dp"
            android:layout_gravity="center" />

    </LinearLayout>

</GridLayout>