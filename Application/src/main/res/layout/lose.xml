<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="1"
    android:columnCount="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:weightSum="1"
        android:measureWithLargestChild="false"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:background="#ffff">

        <ImageView
            android:layout_width="273dp"
            android:layout_height="149dp"
            android:id="@+id/losseImage"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/youlose"
            android:layout_marginTop="30dp"
            android:layout_weight="0.06" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="You didn&apos;t earn any points!"
            android:id="@+id/losseMessage"
            android:textColor="#4C4A4C"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="What you want to do?"
            android:id="@+id/tryAgainQuestion"
            android:layout_marginTop="25dp"
            android:textColor="#4C4A4C"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_horizontal" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"></FrameLayout>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Try again"
            android:id="@+id/tryAgainButton"
            android:background="#ff9230"
            android:textColor="#ffff"
            android:layout_gravity="center_horizontal"
            android:onClick="startOver"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Try a different Challenge"
            android:id="@+id/button_exit"
            android:background="#ff9230"
            android:textColor="#ffff"
            android:layout_gravity="center_horizontal"
            android:onClick="backToMain"
            android:layout_marginTop="20dp"
            android:layout_weight="0.06" /><![CDATA[





        Button
        android:layout_width="390dp"
        android:layout_height="70dp"
        android:text="BBQ Challenge"
        android:id="@+id/button3"
        android:background="#ff9230"
        android:textColor="#ffff"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />



    ]]>
    </LinearLayout>

</GridLayout>